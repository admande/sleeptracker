.row
  .reminder
    - if reminder.user_reminders.where(user: current_user).empty?
      = link_to new_reminder_user_reminder_path(reminder), remote: true do
        .reminder{ id: "reminder_id_#{reminder.id}" }
          .row
            = reminder.title
          .row
            = reminder.body

      .user_reminder_form{ id: "user_reminder_id_#{reminder.id}" }
    - else
      = link_to edit_reminder_user_reminder_path(reminder,
        reminder.user_reminders.where(user: current_user)), remote: true do
        .set_reminder
          .row
            = reminder.title
          .row
            = reminder.body

      .user_reminder_form{ id: "user_reminder_id_#{reminder.id}" }
