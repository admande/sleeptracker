= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    = f.input :email, required: false, autofocus: true, placeholder: "Email", label: false
  .row
    = f.input :password, required: false, placeholder: "Password", label: false
  .row
    = link_to "FORGOT YOUR PASSWORD?", new_user_password_path
  .row
    .inherit.button= f.submit "SIGN IN"
  .row
    = f.input :remember_me, label: "REMEMBER ME", as: :boolean if devise_mapping.rememberable?
  .row
    #bottom_right_sign_up= link_to "SIGN UP"
