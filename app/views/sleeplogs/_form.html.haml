#sleeplog
  = simple_form_for @sleeplog, remote: true do |f|
    .row
      %p= f.input :date, as: :date,
                    start_year: Time.now.year - 1,
                    end_year: Time.now.year,
                    start_month: Time.now.month - 1,
                    end_month: Time.now.month,
                    order: [:month, :day, :year]
    .row
      .small-6.medium-6.columns
        =f.label :hours
      .small-6.medium-6.columns
        .range-slider.radius#hours{data: {slider: '', options: "display_selector: #sliderOutput1; start: 0; end: 24"}}
          %span.range-slider-handle
          %span.range-slider-active-segment
      .small-2.medium-1.columns
        =f.hidden_field :hours, id: 'sliderOutput1', class: 'radius'
        %span{id: 'sliderOutput1'}

    .row
      %p= f.input :quality
    .row
      %p= f.input :notes
    .row
      %p= f.input :in_bed_time
    .row
      %p= f.input :fall_asleep_time
    .row
      %p= f.input :wake_up_time
    .row
      %p= f.input :sleeping_pill, as: :boolean, checked_value: true, unchecked_value: false
      .button= f.submit
