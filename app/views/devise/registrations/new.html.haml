%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :first_name, label: "First Name", required: true, autofocus: true
    = f.input :last_name, label: "Last Name", required: true, autofocus: true
    = f.input :phone, label: "Phone Number", required: true, autofocus: true
    = f.input :email, required: true, autofocus: true
    = f.label :time_zone
    .row
      .small-12.columns= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Easter Time (US & Canada)"
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, label: "Password Confirmation", required: true
  .form-actions
    = f.button :submit, "Sign Up"
= render "devise/shared/links"
